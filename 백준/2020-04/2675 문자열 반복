import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		
		int b = sc.nextInt();
		
		for(int k=0; k<b; k++) {
			int a = sc.nextInt();
			String n = sc.next();
			 
			for(int i=0;i<n.length();i++) {
				
				for(int j = 0;j<a;j++) {
					System.out.print(n.substring(i,i+1));
				}
				
			}
			System.out.println();
		}
		
		
		
		
 
	

			
		}
		
		
	}
	

