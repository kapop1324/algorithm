import java.util.Scanner;
public class Main {

	public static void main(String[] args)   {
		
		 Scanner sc = new Scanner(System.in);
		  long cnt = Integer.parseInt(sc.nextLine());
		  for(int i=0; i<cnt; i++) {
			  long a = sc.nextInt();
			  long  b = sc.nextInt();
			  long dis = b-a;
			  long x = 0;
			  long result = 1;
			  while(x<dis) {
				  result++;
				  x+=(result/2);
			  }
			  System.out.println(result-1);
		  }
		 

	}
		
}

	
