import java.util.*;

public class Main {	
    public static void main(String[] args) {
    	
    	Scanner sc = new Scanner(System.in);
    	
    	int n = sc.nextInt();
    	int k = 1;
    	int t = 1;
    	for(int i=0; i<n;i++) {
    		
    		for(int p=n-t; p>0;p--) {
    			System.out.print(" ");
    		}
    		
    		for(int j=0; j<k; j++) {
    			System.out.print("*");
    		}
    	
    		k+=2;
    		t++;
    		System.out.println();
    	}

    	
    }
    
  
}
